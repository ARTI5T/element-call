    "target": "es2016",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "jsx": "preserve",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
}
